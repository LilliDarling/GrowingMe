{
  "cli": {
    "version": ">= 7.5.0"
  },
  "build": {
    "base": {
      "env": {
        "EXPO_PUBLIC_USE_LOCAL_DATA": "true"
      }
    },
    "development": {
      "extends": "base",
      "developmentClient": true,
      "distribution": "internal"
    },
    "development:simulator": {
      "extends": "development",
      "ios": {
        "simulator": true
      }
    },
    "preview": {
      "extends": "base",
      "distribution": "internal"
    },
    "production": {
      "extends": "base"
    }
  },
  "submit": {
    "production": {}
  }
}